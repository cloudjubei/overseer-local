{
  "name": "electron",
  "productName": "electron",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": ".vite/build/main.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "npm --prefix packages/factory-ts run build && electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "factory:build": "npm --prefix packages/factory-ts run build",
    "run:agent": "node scripts/runAgent.mjs"
  },
  "keywords": [],
  "author": {
    "name": "Kamil Chmurzynski",
    "email": "cloudjubei@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.0.2",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "dompurify": "^3.1.6",
    "electron-squirrel-startup": "^1.0.1",
    "highlight.js": "^11.10.0",
    "litellm": "^0.12.0",
    "openai": "^4.58.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^7.8.2",
    "rehype-highlight": "^7.0.1",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "remark-slug": "^7.0.1",
    "tailwind-merge": "^2.0.0",
    "uuid": "^11.1.0",
    "factory-ts": "workspace:*"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron-forge/plugin-vite": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.16",
    "electron": "37.3.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "postcss": "^8.4.31",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.19"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs}": [
      "eslint --fix"
    ],
    "*.{json,css,scss,md,yml,yaml,html}": [
      "prettier --write"
    ]
  },
  "build": {
    "appId": "com.example.overseer-local",
    "productName": "electron",
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ],
      "icon": "build/icons/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "gatekeeperAssess": false,
      "notarize": {
        "tool": "notarytool",
        "appleId": "${env.APPLE_ID}",
        "appleIdPassword": "${env.APPLE_APP_SPECIFIC_PASSWORD}",
        "teamId": "${env.APPLE_TEAM_ID}"
      }
    },
    "dmg": {
      "artifactName": "${productName}-${version}-${arch}.dmg"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icons/icon.ico",
      "publisherName": "Example Publisher"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "shortcutName": "${productName}",
      "artifactName": "${productName}-Setup-${version}-${arch}.exe"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icons/icon.png",
      "category": "Utility",
      "maintainer": "Kamil Chmurzynski <cloudjubei@gmail.com>",
      "synopsis": "Cross-platform Electron app",
      "desktop": {
        "Name": "${productName}",
        "GenericName": "Productivity",
        "Comment": "Electron application",
        "Type": "Application",
        "Terminal": "false",
        "Categories": "Utility;Development;",
        "StartupWMClass": "electron"
      }
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.AppImage"
    }
  }
}
